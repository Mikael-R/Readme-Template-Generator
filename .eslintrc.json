{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": ["standard", "prettier", "prettier/standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "ignorePatterns": ["dist/"],
  "plugins": ["@typescript-eslint", "prettier", "standard"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/no-unused-vars": [
          2,
          {
            "args": "none"
          }
        ]
      }
    }
  ],
  "rules": {
    "no-unused-vars": "off",
    "prettier/prettier": "error"
  }
}
